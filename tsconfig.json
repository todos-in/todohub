{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "rootDir": ".",
    "moduleResolution": "node16",
    "baseUrl": "./src",
    "sourceMap": true,
    "outDir": "./dist/",
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "exclude": ["./dist", "./node_modules", "./coverage", "__tests__"],
  "include": ["./src"]
}
