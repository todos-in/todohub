{
  "name": "todohub-typescript-action",
  "description": "Github action that collects TODOs in code and sorts them into issues",
  "version": "0.0.1",
  "author": "nigeisel",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/todos-in/todohub",
  "keywords": [
    "github",
    "actions",
    "node",
    "todos",
    "issues"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "lint": "npx eslint .",
    "lint-fix": "npx eslint --fix .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test-coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage && make-coverage-badge --output-path ./badges/coverage.svg",
    "bundle": "ncc build src/index.ts --license licenses.txt",
    "bundle-debug": "tsc -p tsconfig.json",
    "release": "npm ci && npm run lint && npm run test-coverage && npm run bundle"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/core": "^6.1.2",
    "@octokit/plugin-paginate-rest": "^11.1.1",
    "@octokit/plugin-rest-endpoint-methods": "^13.0.1",
    "@octokit/plugin-throttling": "^9.2.0",
    "@octokit/rest": "^20.1.0",
    "@octokit/webhooks-types": "^7.5.0",
    "brandi": "^5.0.0",
    "ignore-wrapper": "file:ignore-wrapper",
    "tar-stream": "^3.1.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^1.7.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/tar": "^6.1.11",
    "@types/tar-stream": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "7.7.0",
    "@typescript-eslint/parser": "7.7.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsonc": "^2.15.1",
    "eslint-plugin-todohub": "0.1.8",
    "jest": "29.7.0",
    "make-coverage-badge": "^1.2.0",
    "tar": "^6.2.0",
    "ts-jest": "29.1.2",
    "typescript": "^5.4.5"
  }
}
